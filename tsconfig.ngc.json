{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"noEmitOnError": false,
		"outDir": "./dist",
		"declaration": true,
		"removeComments": true
	},
	"files": [
		"./src/index.ts"
	],
	"angularCompilerOptions": {
		"strictMetadataEmit": true
	}
}